---
import Container from "./Container.astro"
import Frame from "./Frame.astro"
import { cn } from "@lib/utils"
import { button } from "@tailus/themer-button"
---

<div class="relative">
  <div
    aria-hidden
    class="pointer-events-none absolute left-1/2 top-0 z-10 h-[800px] w-[1000px] -translate-x-1/2 -translate-y-1/3 opacity-0 [background-image:radial-gradient(theme(colors.gray.500),transparent_50%)] dark:opacity-35"
  >
  </div>
  <Container>
    <div class="relative">
      <div class="m-auto mt-6 space-y-6 md:w-8/12 lg:w-7/12">
        <h2
          class="text-center text-4xl font-bold text-gray-800 md:text-5xl dark:text-white"
        >
          Get Started now
        </h2>
        <p class="text-center text-lg text-gray-600 dark:text-gray-300">
          Be part of millions people around the world using tailus in modern
          UIS.
        </p>
        <div class="mt-8 flex flex-wrap justify-center gap-x-6 gap-y-4">
          <Frame>
            <a
              href="https://beta.tailus.io/demo"
              class={cn(button.primary.lg, "relative z-[1]")}
            >
              Start Building
            </a>
          </Frame>
        </div>
      </div>
    </div>
  </Container>
</div>
